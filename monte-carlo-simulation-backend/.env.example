# Monte Carlo SaaS Backend - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Application Settings
# ============================================
APP_NAME=Monte Carlo Simulation
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Standard connection (for Alembic migrations)
DATABASE_URL=postgresql://monte_carlo_user:your_password_here@localhost:5432/monte_carlo_dev

# Async connection (for FastAPI)
DATABASE_URL_ASYNC=postgresql+asyncpg://monte_carlo_user:your_password_here@localhost:5432/monte_carlo_dev

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================
# JWT Authentication
# ============================================
# Generate secret key with: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secret_jwt_key_minimum_32_characters_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# API Key Configuration
# ============================================
API_KEY_PREFIX=mk_live_
API_KEY_LENGTH=24
API_KEY_EXPIRY_DAYS=30

# ============================================
# CORS Settings
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================
# Bloomberg Integration (Optional)
# ============================================
BLOOMBERG_ENABLED=False
# BLOOMBERG_API_KEY=your_bloomberg_api_key_here

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Security
# ============================================
# Bcrypt password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================
# Rate Limiting (Future enhancement)
# ============================================
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_PER_HOUR=1000

# ============================================
# Production Settings (Update for deployment)
# ============================================
# DATABASE_URL=postgresql://user:password@prod-db.example.com:5432/monte_carlo_prod
# DATABASE_URL_ASYNC=postgresql+asyncpg://user:password@prod-db.example.com:5432/monte_carlo_prod
# DEBUG=False
# ENVIRONMENT=production
# CORS_ORIGINS=https://app.montecarlo.example.com
